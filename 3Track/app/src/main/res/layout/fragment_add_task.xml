<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    tools:context=".fragment.AddTaskFragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/departmentNameSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Select Project"/>

        <EditText
            android:id="@+id/taskNameEditTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Task Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Assignee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Select Priority"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Deadline"/>
        </LinearLayout>

        <EditText
            android:id="@+id/descriptionEditTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:hint="Task Description"/>

    </LinearLayout>

    <Button
        android:id="@+id/createNewTaskBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Task"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        tools:layout_editor_absoluteX="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>